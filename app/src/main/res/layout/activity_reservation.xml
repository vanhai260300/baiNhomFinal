                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/res5" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bánh kem"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/res6" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tráng miệng"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/res7" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Homemade"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/mon8" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vỉa hè"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/mon9" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
